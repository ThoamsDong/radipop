{
  "name": "radi-react",
  "version": "0.1.0",
  "homepage": "./",
  "main": "./public/electron.js",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "ps-tree": "^1.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "^4.0.3",
    "web-vitals": "^1.0.1"
  },
  "build": {
    "appId": "com.electron.myapp",
    "productName": "EditorXR",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "./public/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg",
      "icon": "./public/icons/mac/icon.icns"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    },
    "extraResources": [
      {
        "from": "dist-python/",
        "to": "app/dist-python",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "package:python": "node package_python.js",
    "electron:start": "concurrently -k \"cross-env BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "electron:package:mac": "yarn package:python && yarn build && electron-builder -m -c.extraMetadata.main=build/electron.js && yarn package-cleanup" ,
    "electron:package:win": "yarn package:python && yarn build && electron-builder -w -c.extraMetadata.main=build/electron.js && yarn package-cleanup",
    "electron:package:linux": "yarn package:python && yarn build && electron-builder -l -c.extraMetadata.main=build/electron.js& & yarn package-cleanup",
    "package-cleanup": "rm -rf build && rm -rf segmenter_flask_API.spec && rm -rf dist-python"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "electronmon": "^2.0.2",
    "wait-on": "^6.0.0"
  }
}
